
<input onclick="(()=>DeleteUpdate(ProductId))" type="button" class="btn btn-danger" style="width:100px" value="Delete - @ProductId" />

@code {

    [Parameter]//รอรับค่า prop
    public int ProductId { get; set; }

    [Parameter]
    public EventCallback<int> OnDelete { get; set; }//จากแม่

    private async Task DeleteUpdate(int id)// จากลุก
    {
        await OnDelete.InvokeAsync(id);//เรียกใช้ยายยยยยยยยยยยยยยยยยยยยยยย
    }
}
